<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/app_item_selector" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE0E0E0"
        android:paddingLeft="10dp"
        android:text="字母"
        android:textSize="12sp"
        android:textColor="#FF454545"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alpha"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp" >

        <ImageView
            android:id="@+id/contact_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/contact_item_img" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/contact_item_image"
            android:gravity=""
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_contact_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="名字"
                android:textColor="#FF336598"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_contact_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="电话号码"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#FF336598"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>