<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/title_background" >

        <ImageView
            android:id="@+id/privacy_start_iv_previous"
            style="@style/img_previous" />

        <TextView
            style="@style/tv_title"
            android:text="隐私保护" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFC0C0C0" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/privacy_start_et_password"
            style="@style/style_edittext"
            android:layout_margin="20dp"
            android:hint="请输入密码"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/privacy_start_tv_forgetpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="#FF95A1B2"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout style="@style/btn_background" >

        <Button
            android:id="@+id/b_start_privacy"
            style="@style/btn_style"
            android:text="下	一	步" />
    </LinearLayout>

</LinearLayout>